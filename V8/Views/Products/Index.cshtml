@model IEnumerable<V8.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>All products for sale</h1>

<p>
    <a class="button button1" type="button" asp-action="Create"> Create a new product listing </a>
</p>


<form asp-controller="Products" asp-action="Index" method="get">
    <p>
        Product Name: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                    Seller Name
            </th>

            <th>
                    Product Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.Price)
            </td>

            <td>
                <img height="200" width="200" src="@Html.DisplayFor(modelItem => item.Photo)"><img>

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>

            <td>
                @if (@ViewBag.UserId == @item.UserId)
                {
                    <a class="button button1" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                }
                <a class="button button1" asp-action="Details" asp-route-id="@item.Id">Details</a>

                @if (@ViewBag.UserId == @item.UserId)
                {
                    <a class="button button1" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                }


                @if (@ViewBag.UserId != @item.UserId)
                {

                    <a class="button button1" asp-action="Purchase" asp-route-id="@item.Id">Add To Cart</a>
                }
            </td>

        </tr>
}
    </tbody>
</table>

